{% extends './layout/default' %}

{% block breadcrumbs %}
  {{ Breadcrumbs.render }}
{% endblock %}

{% block content %}
  {{
    Form.model(
      user,
      {
        class: 'form-horizontal',
        id: 'store',
        url: route('admin.users.store')
      }
    )
  }}

  <div class="row">
    <div class="col-lg-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">
            {{ 'addUserFormTitle'|_ }}
          </h3>
        </div>
        <div class="box-body">
          {{ ExpandedForm.text('companyName', null) }}
          {{
            ExpandedForm.text(
              'email',
              null,
              {
                helpText: trans('firefly.admin_update_email')
              }
            )
          }}
          {{ ExpandedForm.password('password') }}
          {{ ExpandedForm.password('password_confirmation') }}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      {# panel for options #}
      <button type="submit" class="btn pull-right btn-success">
        {{ 'add_user'|_ }}
      </button>
    </div>
  </div>
  {{ Form.close() }}
{% endblock %}
